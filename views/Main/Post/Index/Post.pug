.post
  div(class="flex flex-col gap-y-1")
    div
      if hasCategory
        a(
          href=`[##_${type}_rep_category_link_##]`
          class='text-sm text-h-400') #{`[##_${type}_rep_category_##]`}
    div 
      a(
        href=`[##_${type}_rep_link_##]`) 
        div(class="flex md:gap-x-8 gap-x-6 group")
          div(class="flex-1")
            h2(class='text-h-800 dark:text-h-200 font-bold md:text-xl text-lg line-clamp-1 leading-5 group-hover:underline [&_img]:inline-block [&_img]:!w-3.5') #{`[##_${type}_rep_title_##]`}
            time(class='text-h-400 md:text-sm text-xs') #{`[##_${type}_rep_${type === 'list' ? 'regdate' : 'date'}_##]`}
            p(class='relative text-h-400 line-clamp-2 md:mt-2 mt-1 md:text-base text-sm') #{`[##_${type}_rep_summary_##]`}

          #{`s_${type}_rep_thumbnail`}
            div(class="md:basis-[160px] md:h-[108px] basis-[120px] h-[88px] group-hover:scale-105 ease-in-out duration-200 ")
              img.lazyload(
                data-src=`[##_${type}_rep_thumbnail${type === 'list' ? '' : '_url'}_##]`
              data-sizes='auto'
              alt=''
              class='object-cover bg-h-100 w-full h-full')